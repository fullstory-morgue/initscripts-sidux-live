echo "DESKTOP=\"$DESKTOP\""            > "$HWSETUP_DESKTOP"

#I18N## Write all, including non-standard variables, to "$HWSETUP_MAIN"
#I18N#echo "LANG=\"$LANG\""                  > "$HWSETUP_MAIN"
#I18N#echo "COUNTRY=\"$COUNTRY\""           >> "$HWSETUP_MAIN"
